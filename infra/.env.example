## Listen Stream — Environment Variables
## Copy this file to .env and fill in real values

# ── Environment ───────────────────────────────────────────────────────────────
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=listen-stream

# ── Database ──────────────────────────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=listen_stream
POSTGRES_USER=listen_stream
POSTGRES_PASSWORD=listen_stream_dev_password

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ── Consul ────────────────────────────────────────────────────────────────────
CONSUL_HTTP_ADDR=consul-server-1:8500

# ── OTel Collector ────────────────────────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=otel-collector:4317
OTEL_SERVICE_VERSION=1.0.0
DEPLOYMENT_ENV=development

# ── Services (JWT is loaded from Consul KV) ───────────────────────────────────
AUTH_SVC_PORT=8001
PROXY_SVC_PORT=8002
USER_SVC_PORT=8003
SYNC_SVC_PORT=8004
ADMIN_SVC_PORT=8005

# ── Alertmanager ─────────────────────────────────────────────────────────────
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXX/YYYY/ZZZZ
SMTP_USERNAME=alerts@listen-stream.com
SMTP_PASSWORD=smtp-password-here

# ── Grafana ───────────────────────────────────────────────────────────────────
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=listen_stream_admin_2026

# ── Elasticsearch ─────────────────────────────────────────────────────────────
ES_JAVA_OPTS=-Xms512m -Xmx512m

# ── Logstash ──────────────────────────────────────────────────────────────────
LS_JAVA_OPTS=-Xms256m -Xmx256m
LOGSTASH_DEBUG=false
