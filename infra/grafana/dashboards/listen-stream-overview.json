{
  "title": "Listen Stream â€” Service Overview",
  "uid": "listen-stream-overview",
  "version": 1,
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "timezone": "browser",
  "tags": ["listen-stream", "services"],

  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(up, job)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      },
      {
        "name": "interval",
        "label": "Interval",
        "type": "interval",
        "query": "1m,5m,10m,30m,1h",
        "current": { "selected": true, "text": "5m", "value": "5m" }
      }
    ]
  },

  "panels": [
    {
      "id": 1,
      "title": "Service Availability",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "avg(up{job=~\"$service\"}) * 100",
          "legendFormat": "Availability %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 90 },
              { "color": "green", "value": 99 }
            ]
          }
        }
      }
    },

    {
      "id": 2,
      "title": "Request Rate (RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(listen_stream_http_requests_total{job=~\"$service\"}[$interval])) by (service)",
          "legendFormat": "{{ service }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "lineWidth": 2 }
        }
      }
    },

    {
      "id": 3,
      "title": "Error Rate (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(listen_stream_http_requests_total{status=~\"5..\",job=~\"$service\"}[$interval])) by (service) / sum(rate(listen_stream_http_requests_total{job=~\"$service\"}[$interval])) by (service) * 100",
          "legendFormat": "{{ service }} error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "lineWidth": 2 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },

    {
      "id": 4,
      "title": "P50 / P95 / P99 Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(listen_stream_http_request_duration_seconds_bucket{job=~\"$service\"}[$interval])) by (service, le))",
          "legendFormat": "{{ service }} p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(listen_stream_http_request_duration_seconds_bucket{job=~\"$service\"}[$interval])) by (service, le))",
          "legendFormat": "{{ service }} p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(listen_stream_http_request_duration_seconds_bucket{job=~\"$service\"}[$interval])) by (service, le))",
          "legendFormat": "{{ service }} p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },

    {
      "id": 5,
      "title": "WebSocket Active Connections",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "listen_stream_websocket_active_connections",
          "legendFormat": "Active connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 8000 },
              { "color": "red", "value": 9500 }
            ]
          }
        }
      }
    },

    {
      "id": 6,
      "title": "Cache Hit Rate (L1 / L2)",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(listen_stream_cache_l1_hits_total[$interval])) / (sum(rate(listen_stream_cache_l1_hits_total[$interval])) + sum(rate(listen_stream_cache_l1_misses_total[$interval]))) * 100",
          "legendFormat": "L1 Cache Hit %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "green", "value": 80 }
            ]
          }
        }
      }
    },

    {
      "id": 7,
      "title": "Active Alerts",
      "type": "alertlist",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "options": {
        "maxItems": 20,
        "sortOrder": 1,
        "dashboardAlerts": false,
        "alertName": "",
        "stateFilter": { "firing": true, "pending": true, "noData": false, "normal": false, "error": false }
      }
    },

    {
      "id": 8,
      "title": "PostgreSQL Connections",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 28 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "Active connections"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },

    {
      "id": 9,
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 28 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "legendFormat": "Used (MB)"
        },
        {
          "expr": "redis_memory_max_bytes / 1024 / 1024",
          "legendFormat": "Max (MB)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "MB" } }
    },

    {
      "id": 10,
      "title": "Consul Healthy Services",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 28 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(consul_health_service_status{status=\"passing\"})",
          "legendFormat": "Healthy"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 5 }
            ]
          }
        }
      }
    }
  ]
}
